<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/up"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_button"
            android:id="@+id/default_activity_button"/>
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/wood"
            android:background="@drawable/circle_button_wood"/>
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/sky_blue"
            android:layout_marginLeft="8dp"
            android:background="@drawable/circle_button_sky_blue"/>
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/light_red"
            android:layout_marginLeft="8dp"
            android:background="@drawable/circle_button_light_red"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/up"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/light_green"
                android:background="@drawable/circle_button_light_green"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/green"
                android:background="@drawable/circle_button_green"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/black"
                android:background="@drawable/circle_button_black"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/red"
                android:background="@drawable/circle_button_red"/>
        </LinearLayout>
</RelativeLayout>